<div class="adhoc_query">
  <h1>Find <%= model.name.pluralize.titleize %></h1>
  
  <h2>Criteria</h2>
  <table class="terms">
    <% current_query(model).terms.each do |term| -%>
      <tr>
        <td><%= term.attribute %></td>
        <td><%= term.operator %></td>
        <td><%= term.value %></td>
        <td><%= delete_term(term) %></td>
      </tr>
    <% end -%>
    <tr class="newterm">
      <td><%= attribute_selector(model) %></td>
      <td><%= operator_selector %></td>
      <td><%= value_input %></td>
      <td><%= add_term(model) %></td>
    </tr>
  </table>
</div>