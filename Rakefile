require 'rubygems'

begin
  require 'jeweler'

  Jeweler::Tasks.new do |p|
    p.authors = ["Mike Perham"]
    p.email  = 'mperham@gmail.com'
    p.summary = 'Adhoc database search for Rails'
    p.homepage = "http://github.com/mperham/adhoc-search"
    p.name = "adhoc-search"
    p.files =  FileList['README.markdown', 'Rakefile', 'VERSION.yml', 'init.rb', "{lib,app,test,rails,config}/**/*", ]
  end
rescue LoadError
  puts "Jeweler, or one of its dependencies, is not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end
